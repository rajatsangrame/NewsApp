<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Bold" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Regular" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.OptionsBottomSheetButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textColor">@color/option_item_tint_color</item>
    </style>

</resources>
